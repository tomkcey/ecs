{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2021",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noUncheckedIndexedAccess": true,
    "rootDir": "src",
    "outDir": "lib",
    "sourceMap": true
  },
  "exclude": ["node_modules", "dist", "coverage", "lib"]
}
